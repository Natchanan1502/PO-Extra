pip install flask flask-cors
from flask import Flask, request, jsonify
from flask_cors import CORS

app = Flask(__name__)
CORS(app)

@app.route("/submit", methods=["POST"])
def submit():
    data = request.json
    po = data.get("po_number")
    material = data.get("material_code")

    # Save to file
    with open("po_material_data.txt", "a") as f:
        f.write(f"PO: {po}, Material: {material}\n")

    return jsonify({"message": "PO and Material Code saved successfully"})

if __name__ == "__main__":
    app.run(debug=True)
